<div class="modal fade" id="bsConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="bsConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-between">
                <h5 class="modal-title" id="bsConfirmationModalLabel">@Title</h5>
                <button type="button" @onclick="OnCancel" class="btn close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <button type="button" @onclick="OnCancel" class="btn btn-lg btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" @onclick="OnConfirm" class="btn btn-lg @ButtonStyle">@ButtonText</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Please confirm";
    [Parameter] public string ButtonStyle { get; set; } = "btn-btn-primary";
    [Parameter] public string ButtonText { get; set; } = "Delete";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}